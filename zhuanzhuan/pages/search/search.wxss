.search-box{
    width: 100%;
    height: 100vh;
}
.top{
    width: 100%;
    height: 100rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
    border-bottom: 0.05rpx solid #E0E0E0;
}
.top-left{
    width: 80%;
    height: 80rpx;
    display: flex;
    align-items: center;
    font-size: 28rpx;
    background-color: #f8f8f8;
    border-radius: 5rpx;
}
.top-right{
    width: 15%;
    height: 80rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 28rpx;
}
.top-input{
    width: 650rpx;
    height: 80rpx;
}
.search-img{
    width: 50rpx;
    height: 50rpx;
}
.recommend-box{
    width: 100%;
}
.recommend-topic{
    width: 100%;
    height: 80rpx;
    text-indent: 20rpx;
    line-height: 80rpx;
    font-size: 30rpx;
    font-weight: bold;
}
.recommend-content-box{
    background-color: #f8f8f8;
    display: inline-block;
    padding: 10rpx;
    margin: 20rpx;
    font-size: 24rpx;
    border-radius: 5rpx;
    color: #a2a1a1;
}
.search-box{
    width: 100%;
    height: 100rpx;
}
.search-topic{
    width: 95%;
    height: 70rpx;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 0.05rpx solid #E0E0E0;
}
.search-text{
    font-size: 30rpx;
    font-weight: bold;
}
.delate-img{
    width: 40rpx;
    height: 40rpx;
}
.search-content{
    width: 95%;
    height: 80rpx;
    margin: auto;
    line-height: 80rpx;
    text-indent: 20rpx;
    font-size: 24rpx;
    border-bottom: 0.01rpx solid #E0E0E0;
    color: #b5b5b5;
}