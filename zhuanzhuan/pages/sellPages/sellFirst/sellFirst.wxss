.sell-first-scroll-view{
    margin: 0;
    padding: 0;
    background:linear-gradient(#ffdacb,#fb7b69);
}
.top-div{
    width: 100%;
}
.top-div-top-img{
    width: 100%;
    height: 600rpx;
}
.image1{
    width: 100%;
    height: 600rpx;
}
.top-div-bottom-img{
    width: 100%;
    height: 200rpx;
}
.image2{
    width: 100%;
    height: 200rpx;
}
.center-div{
    width: 100%;
    margin-top: 40rpx;
    box-sizing: border-box;
}
.bottom-div{
    width: 100%;
    height: 1000rpx;
    margin-top: 40rpx;
    box-sizing: border-box;
    margin-bottom: 240rpx;
}
.center-div-inside{
    width: 92%;
    margin: auto;
    border-radius: 48rpx;
    overflow: hidden;
    background-color: #FFFFFF;
}
.bottom-div-inside{
    width: 92%;
    margin: auto;
    border-radius: 48rpx;
    overflow: hidden;
    background-color: #FFFFFF;
}
.top-topic{
    width: 100%;
    height: 120rpx;
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #e5877b;
    position: relative;
}
.top-topic-image{
    width: 100%;
    height: 120rpx;
    display: block;
}
.top-topic-text{
    position: absolute;
}
.btn{
    width: 100%;
    height: 160rpx;
    background-color: #fe5c48;
    display: flex;
    justify-content: center;
    align-items: center;
    position: fixed;
    bottom: 0;
}
.btn-inside{
    width: 90%;
    height: 120rpx;
    background-color: #fed189;
    border-radius: 8rpx;
    text-align: center;
    line-height: 120rpx;
    color: #df6e4b;
    font-size: 60rpx;
}
.bottom-text{
    color: #d4d4d4;
}
.text-content{
    display: block;
    width: 90%;
    margin: auto;
}
.img-cover{
    width: 33%;
    float: left;
}
.img{
    width: 160rpx;
    height: 160rpx;
    display: block;
    margin: auto;
}
.img-text{
    font-size: 20rpx;
    text-align: center;
    color: #727275;
}
.return{
    position: fixed;
    top: 60%;
    left: 80%;
    width: 160rpx;
    height: 160rpx;
    background-color: rgba(238,99,99,0.4);
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #FF1493;
    font-size: 34rpx;
}
.none{
    display: none;
}